    }

    .icon-location {
      color: #DC3545; /* rojo */
      margin-right: 10px;
    }

    @media (max-width: 768px) {
      .header h1 {
        font-size: 40px;
      }

      .header p {
        font-size: 16px;
      }

      .contact-container {
        flex-direction: column;
      }

      .contact-map iframe {
        height: 300px;
      }
    }
  </style>
</Layout>

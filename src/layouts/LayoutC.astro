    .contact-text {
      flex: 1;
      min-width: 300px;
      font-size: 30px;
      color: #000;
      margin-left: -20px;
    }

    .contact-text h2 {
      font-size: 32px;
      margin-bottom: 20px;
    }

    .email {
      color: #000;

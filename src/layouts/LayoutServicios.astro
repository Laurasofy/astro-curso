---
import Layout from "../layouts/Layout.astro";


export interface Props {
  title?: string;
}

const { title = "Servicios | Nuestra Empresa" } = Astro.props;
---

<Layout title={title}>
  <header class="header">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <h1>Nuestros Servicios</h1>
    <p>
      Nos complace ofrecerte una amplia gama de servicios diseñados para impulsar tu éxito y satisfacer tus necesidades.
    </p>
  </header>
  
  <main>
    <slot /> 
  </main>

  <footer class="footer">
    <p>© 2025 Nuestra Empresa. Todos los derechos reservados.</p>
  </footer>
</Layout>

<style>
  .header {
    text-align: center;
    padding: 60px 20px;
    background: linear-gradient(to right, #00A152, #006837);
    color: white;
    text size: 20px;
    z-index: 2000;
    top:0;
    left:0;
  }

  .header h1 {
    font-size: 48px;
    margin-bottom: 10px;
  }

  .header p {
    font-size: 20px;
  }

  .footer {
    text-align: center;
    padding: 20px;
    background: #222;
    color: rgb(0, 0, 0);
    font-size: 14px;
  }
</style>

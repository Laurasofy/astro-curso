---
import type { MenuItem } from "../types/types.ts";
interface Props extends MenuItem {}
const {title, url} =Astro.props;

---
<li>
    <a href={url}> {title}</a>
  </li>
  
  <style>
    li {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  
    li a {
      font-size: 30px;
      display: block;
      padding: 30px 40px;
      color: white;
      text-decoration: none;
      transition: all 0.3s ease-in-out;
      display: flex;
      align-items: center;
      font-family: 'Poppins', sans-serif; 
      
    }
    li a:hover {
      color: orange;
      transform: scale(1.15);
    }
  
    img {
      width: 35px;
    }
  </style>
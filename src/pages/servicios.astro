---
import Layout from "../layouts/Layout.astro";

export interface Props {
  title?: string;
}

const { title = "Servicios | Nuestra Empresa" } = Astro.props;

const services = [
  {
    title: "Soluciones Personalizadas",
    description: "Entendemos que cada negocio es único y tiene necesidades específicas. Es por eso que nos enorgullece ofrecerte soluciones personalizadas diseñadas especialmente para satisfacer las particularidades de tu negocio.",
    icon: "fa-solid fa-lightbulb fa-bounce",
    color: "#e7b80d"
  },
  {
    title: "Asesoría Profesional",
    description: "Ofrecemos servicios de asesoría profesional para brindarte el conocimiento y la experiencia necesarios para tomar decisiones informadas y alcanzar el éxito.",
    icon: "fa-solid fa-arrow-up-right-dots fa-bounce",
    color: "#74C0FC"
  },
  {
    title: "Optimización De Procesos",
    description: "Evaluamos cada etapa del flujo de trabajo, identificando cuellos de botella, ineficiencias y áreas de mejora.",
    icon: "fa-solid fa-hard-hat fa-beat-fade",
    color: "#dfa23a"
  },
  {
    title: "Presencia Digital",
    description: "Ofrecemos soluciones integrales tanto presenciales como digitales para satisfacer las necesidades de nuestros clientes.",
    icon: "fa-solid fa-computer fa-beat-fade",
    color: "#111212"
  }
];
---

<Layout title={title}>
  <header class="header">
    <h1>Nuestros Servicios</h1>
    <p>
      Nos complace ofrecerte una amplia gama de servicios diseñados para impulsar tu éxito y satisfacer tus necesidades.
    </p>
  </header>
  
  <main>
    <section class="servicios">
      {services.map(service => (
        <div class="servicio slide-in">
          <i class={service.icon} style={`color: ${service.color};`}></i>
          <h2>{service.title}</h2>
          <p>{service.description}</p>
        </div>
      ))}
    </section>
  </main>

  <footer class="footer">
    <p>© 2025 Nuestra Empresa. Todos los derechos reservados.</p>
  </footer>
</Layout>

<style>
  .header {
    text-align: center;
    padding: 60px 20px;
    background: linear-gradient(to right, #00A152, #006837);
    color: white;
  }

  .header h1 {
    font-size: 80px;
    margin-bottom: 15px;
  }

  .header p {
    font-size: 30px;
    line-height: 1.6;
  }

  .servicios {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
    padding: 50px 20px;
    background: linear-gradient(to bottom, #e0f2e9, #c8e6c9);
  }

  .servicio {
    background: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    width: 80%;
    max-width: 900px;
    min-height: 400px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out, box-shadow 0.3s ease-in-out;
    color: rgb(20, 20, 20);
    font-family: 'Poppins', sans-serif;
    font-size: 22px;
    
  }

  .servicio i {
    font-size: 70px;
    margin-bottom: 20px;
  }

  .servicio h2 {
    font-size: 36px;
    font-weight: bold;
  }

  .servicio p {
    font-size: 24px;
    line-height: 1.8;
  }

  .servicio:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .slide-in { transform: translateY(50px); }
  .visible { opacity: 1; transform: translateY(0); }

  .footer {
    text-align: center;
    padding: 20px;
    background: #222;
    color: white;
    font-size: 16px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const servicios = document.querySelectorAll(".servicio");
    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("visible");
        }
      });
    }, { threshold: 0.3 });

    servicios.forEach(servicio => {
      observer.observe(servicio);
    });
  });
</script>
